---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import table from "../components/Table.astro";

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <div class="absolute top-0 bottom-0 left-0 right-0 z-[-2] h-full w-full bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(150,0,0,0.5),rgba(0,0,0,0.7))]"></div>
    <Header />
    <div class="flex-grow w-full flex flex-col">
      <slot />
    </div>
    <table />
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    color-scheme: light dark;
  }
  html {
    scroll-behavior: smooth;
    font-family: 'Poppins', sans-serif;
    background: #090909;
  }
  body {
    display: flex;
    flex-direction: column;
    margin: 0;
    padding: 0;
    min-height: 100vh;
    position: relative;
    overflow-x: hidden; /* Solo ocultamos el desplazamiento horizontal */
  }
  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }
  header nav ul li a {
    text-decoration: none;
  }
</style>
